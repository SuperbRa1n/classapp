
.container {
  padding: 16px;
  background-color: #f8f8f8;
}
.grade-summary,
.term-summary {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 16px;
}
.grade-item {
  width: 48%;
  margin-bottom: 10px;
  padding: 10px;
  border-radius: 8px;
}
.term-item {
  padding: 10px;
  margin-right: 8px;
  background-color: #f0f0f0;
  border-radius: 8px;
}
.selected-term-item {
  background-color: #E3F2FD;
}
.course-list {
  margin-top: 10px;
}
.course-item {
  padding: 10px;
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 10px;
}
.course-header {
  display: flex;
  justify-content: space-between;
}
.progress-bar-container {
  margin-top: 5px;
  height: 10px;
  background-color: #e0e0e0;
  border-radius: 5px;
  overflow: hidden;
}
.progress-bar {
  height: 100%;
  background-color: #74c6f7;
}
